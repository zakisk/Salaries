<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/windowBackgroundColor"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="4dp">
    <ImageView
        android:id="@+id/shimmer_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/shimmer_name"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="                                                   "
        android:textSize="10sp"
        android:background="@color/silver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_image"/>

    <TextView
        android:id="@+id/shimmer_designation"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="8sp"
        android:text="                            "
        android:background="@color/silver"
        app:layout_constraintTop_toBottomOf="@id/shimmer_name"
        app:layout_constraintStart_toEndOf="@id/shimmer_image"/>

    <TextView
        android:id="@+id/shimmer_salary"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="                                        "
        android:textSize="8sp"
        android:background="@color/silver"
        app:layout_constraintTop_toBottomOf="@id/shimmer_designation"
        app:layout_constraintStart_toEndOf="@id/shimmer_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>