<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#ffffff</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>



    <style name="buttonStyle" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/buttonBackgroundColor</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MessageTextStyle</item>
        <item name="materialAlertDialogTheme">@style/DialogBackground</item>
    </style>

    <!--    Alert Dialog Theme-->
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MessageTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogBackground" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:backgroundTint">@color/windowBackgroundColor</item>
    </style>
    <style name="itemTextAppearance">
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>
    <style name="Salaries.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="startIconTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
